@{
    ViewData["Title"] = "Welcome to Wizard World";
}

@section Styles {
    <style>
        /* Thematic Fonts */
        @@import url('https://fonts.googleapis.com/css2?family=Cinzel:wght@700&display=swap');

        /* Base Styles */
        body {
            margin: 0;
            padding: 0;
            background: linear-gradient(135deg, #1a1a1a, #333333);
            position: relative;
            overflow-x: hidden;
            cursor: url('data:image/svg+xml;base64,'), auto;
        }

        .background-overlay {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0, 0, 0, 0.5);
            z-index: -1;
        }

        /* Castle Silhouette */
        .castle-silhouette {
            position: absolute;
            bottom: 0;
            width: 100%;
            height: 200px;
            background: url('data:image/svg+xml;base64,') no-repeat center bottom;
            background-size: cover;
            pointer-events: none;
        }

        /* Magical Animations */
        .sparkle {
            position: absolute;
            width: 8px;
            height: 8px;
            background: radial-gradient(circle, rgba(255,255,255,1) 0%, rgba(255,255,255,0) 70%);
            border-radius: 50%;
            animation: sparkle 2s infinite;
        }

        @@keyframes sparkle {
            0% { opacity: 0; transform: scale(0) translateY(0); }
            50% { opacity: 1; transform: scale(1.5) translateY(-20px); }
            100% { opacity: 0; transform: scale(0) translateY(-40px); }
        }

        /* Animated Header */
        .hero-section {
            position: relative;
            overflow: hidden;
            padding: 4rem 2rem;
            background: rgba(0, 0, 0, 0.3);
            border-radius: 30px;
            margin: 2rem auto;
            max-width: 1200px;
            box-shadow: 20px 20px 60px #1a1a1a, -20px -20px 60px #333333;
            color: white;
            text-align: center;
        }

        /* Candles */
        .candles {
            display: flex;
            justify-content: center;
            gap: 1rem;
            margin-bottom: 1.5rem;
        }

        .candle {
            width: 30px;
            height: 60px;
            position: relative;
            animation: flicker 3s infinite;
        }

        .candle::before {
            content: '';
            position: absolute;
            top: 0;
            left: 50%;
            transform: translateX(-50%);
            width: 8px;
            height: 20px;
            background: yellow;
            border-radius: 50% 50% 0 0;
            box-shadow: 0 0 10px 2px yellow;
        }

        .candle::after {
            content: '';
            position: absolute;
            bottom: 0;
            left: 50%;
            transform: translateX(-50%);
            width: 30px;
            height: 30px;
            background: #ffffff33;
            border-radius: 50%;
        }

        @@keyframes flicker {
            0%, 100% { opacity: 1; }
            50% { opacity: 0.8; }
        }

        /* House Crests */
        .house-crest {
            width: 60px;
            height: 60px;
            margin: 0 auto 1rem auto;
        }

        /* Feature Cards */
        .features-grid {
            display: grid;
            grid-template-columns: repeat(2, 1fr);
            gap: 2rem;
            padding: 2rem;
            max-width: 1200px;
            margin: 0 auto;
        }

        .feature-card {
            background: rgba(255, 255, 255, 0.1);
            border-radius: 20px;
            padding: 2rem;
            text-align: center;
            transition: all 0.3s ease;
            box-shadow: 8px 8px 16px rgba(0, 0, 0, 0.2),
                        -8px -8px 16px rgba(255, 255, 255, 0.2);
        }

        .feature-card:hover {
            transform: translateY(-5px);
            box-shadow: 12px 12px 24px rgba(0, 0, 0, 0.2),
                        -12px -12px 24px rgba(255, 255, 255, 0.2);
        }

        .feature-title {
            font-size: 1.5rem;
            color: #ffd700;
            margin-bottom: 1rem;
            font-family: 'Cinzel', serif;
        }

        .feature-description {
            color: #ddd;
            margin-bottom: 1.5rem;
            line-height: 1.6;
        }

        .feature-link {
            display: inline-block;
            padding: 0.8rem 1.5rem;
            background: #ffd700;
            color: #1a1a1a;
            text-decoration: none;
            border-radius: 25px;
            font-weight: 500;
            transition: all 0.3s ease;
            box-shadow: 3px 3px 6px rgba(0, 0, 0, 0.2),
                        -3px -3px 6px rgba(255, 255, 255, 0.2);
        }

        .feature-link:hover {
            background: #fffde7;
            color: #1a1a1a;
        }

        /* About Section */
        .about-section {
            padding: 4rem 2rem;
            max-width: 1200px;
            margin: 0 auto;
            color: #ddd;
        }

        .about-title {
            font-size: 2rem;
            color: #ffd700;
            text-align: center;
            margin-bottom: 2rem;
            font-family: 'Cinzel', serif;
        }

        .about-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
            gap: 2rem;
            margin-top: 3rem;
        }

        .about-card {
            background: rgba(255, 255, 255, 0.1);
            border-radius: 20px;
            padding: 2rem;
            box-shadow: 8px 8px 16px rgba(0, 0, 0, 0.2),
                        -8px -8px 16px rgba(255, 255, 255, 0.1);
        }

        .about-card h3 {
            color: #ffd700;
            margin-bottom: 1rem;
            font-size: 1.3rem;
            font-family: 'Cinzel', serif;
        }

        .about-card p {
            color: #ddd;
            line-height: 1.6;
        }

        /* Quote Carousel */
        .quote-carousel {
            background: rgba(0, 0, 0, 0.3);
            padding: 3rem;
            border-radius: 30px;
            margin: 4rem 0;
            box-shadow: inset 8px 8px 16px rgba(0, 0, 0, 0.2),
                        inset -8px -8px 16px rgba(255, 255, 255, 0.1);
            color: #ffd700;
            font-family: 'Cinzel', serif;
        }

        .quotes {
            display: flex;
            animation: slide 20s infinite;
        }

        .quote-item {
            min-width: 100%;
            box-sizing: border-box;
            padding: 2rem;
            text-align: center;
        }

        @@keyframes slide {
            0% { transform: translateX(0); }
            25% { transform: translateX(-100%); }
            50% { transform: translateX(-200%); }
            75% { transform: translateX(-300%); }
            100% { transform: translateX(0); }
        }

        blockquote.quote {
            font-size: 1.5rem;
            color: #ffd700;
            font-style: italic;
            text-shadow: 1px 1px 2px rgba(255, 215, 0, 0.5);
            margin: 0;
        }

        .quote-author {
            color: #fff;
            margin-top: 1rem;
            font-weight: 500;
        }

        /* News & Events Section */
        .news-section {
            padding: 4rem 0;
            max-width: 1200px;
            margin: 0 auto;
        }

        .news-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
            gap: 2rem;
            margin-top: 2rem;
        }

        .news-card {
            background: rgba(255, 255, 255, 0.1);
            border-radius: 20px;
            padding: 2rem;
            box-shadow: 8px 8px 16px rgba(0, 0, 0, 0.2),
                        -8px -8px 16px rgba(255, 255, 255, 0.1);
            transition: transform 0.3s ease;
            color: #ddd;
        }

        .news-card:hover {
            transform: translateY(-5px);
        }

        /* Featured Wizards Section */
        .featured-wizards-section {
            padding: 4rem 0;
            max-width: 1200px;
            margin: 0 auto;
        }

        /* Footer */
        .footer-bottom {
            text-align: center;
            margin-top: 2rem;
            padding-top: 1rem;
            border-top: 1px solid #555;
            color: #a8b2bd;
        }

        /* Responsive Design */
        @@media (max-width: 768px) {
            .hero-title {
                font-size: 2.5rem;
            }

            .features-grid {
                grid-template-columns: 1fr;
            }

            .candles {
                display: none; /* Hide candles on smaller screens */
            }

            .quote-carousel .quotes {
                flex-direction: column;
                animation: none;
            }

            .quote-carousel .quote-item {
                padding: 1rem;
            }
        }
    </style>
}

<!-- Background Overlay -->
