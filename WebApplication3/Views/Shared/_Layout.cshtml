<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Wizard World</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WebApplication3.styles.css" asp-append-version="true" />
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600&family=Cinzel:wght@700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
    <style>
        /*<![CDATA[*/
        :root {
            --color-primary: #6a1b9a;
            --color-secondary: #9c27b0;
            --color-accent: #ffd700;
            --bg-dark: #1a1a1a;
            --bg-darker: #141414;
            --shadow-color: rgba(0, 0, 0, 0.2);
            --highlight-color: rgba(255, 255, 255, 0.05);
            --neu-distance: 8px;
            --border-radius: 12px;
        }

        body {
            font-family: 'Poppins', sans-serif;
            margin: 0;
            padding: 0;
            background: linear-gradient(135deg, var(--bg-dark), var(--bg-darker));
            min-height: 100vh;
            display: flex;
            flex-direction: column;
            color: #ddd;
        }

        main {
            flex: 1;
            padding: 2rem 0;
        }

        .container {
            padding: 0 1.5rem;
        }

        /* Neumorphic Styles */
        .neu-inset {
            background: var(--bg-darker);
            box-shadow: inset var(--neu-distance) var(--neu-distance) calc(var(--neu-distance) * 2) var(--shadow-color),
                       inset calc(var(--neu-distance) * -1) calc(var(--neu-distance) * -1) calc(var(--neu-distance) * 2) var(--highlight-color);
            border-radius: var(--border-radius);
        }

        .neu-outset {
            background: var(--bg-darker);
            box-shadow: var(--neu-distance) var(--neu-distance) calc(var(--neu-distance) * 2) var(--shadow-color),
                       calc(var(--neu-distance) * -1) calc(var(--neu-distance) * -1) calc(var(--neu-distance) * 2) var(--highlight-color);
            border-radius: var(--border-radius);
        }

        .neu-flat {
            background: var(--bg-darker);
            box-shadow: 0 2px 4px var(--shadow-color);
            border-radius: var(--border-radius);
        }

        /* Navbar Styles */
        .navbar {
            background: var(--bg-darker) !important;
            box-shadow: 0 4px 8px var(--shadow-color);
            padding: 0.75rem 0;
            border-bottom: 1px solid var(--highlight-color);
        }

        .navbar .container {
            background: var(--bg-darker);
            padding: 0.5rem 1.5rem;
            border-radius: var(--border-radius);
            box-shadow: inset 2px 2px 5px var(--shadow-color),
                       inset -2px -2px 5px var(--highlight-color);
        }

        .navbar-brand {
            color: var(--color-accent) !important;
            font-family: 'Cinzel', serif;
            font-weight: 700;
            font-size: 1.4rem;
            margin-right: 2rem;
            padding: 0.5rem 1rem;
            border-radius: var(--border-radius);
            transition: all 0.3s ease;
        }

        .navbar-brand:hover {
            color: #fff !important;
            box-shadow: 2px 2px 5px var(--shadow-color),
                       -2px -2px 5px var(--highlight-color);
        }

        .navbar-nav {
            display: flex;
            flex-direction: row;
            gap: 1rem;
            align-items: center;
        }

        .nav-item {
            list-style: none;
            margin: 0;
            padding: 0;
        }

        .nav-link {
            color: #ddd !important;
            font-weight: 500;
            padding: 0.75rem 1.25rem !important;
            border-radius: var(--border-radius);
            transition: all 0.3s ease;
            text-decoration: none;
            display: flex;
            align-items: center;
            white-space: nowrap;
            box-shadow: 2px 2px 5px var(--shadow-color),
                       -2px -2px 5px var(--highlight-color);
        }

        .nav-link i {
            margin-right: 0.75rem;
            width: 16px;
            text-align: center;
        }

        .nav-link:hover {
            color: var(--color-accent) !important;
            transform: translateY(-1px);
            box-shadow: 4px 4px 8px var(--shadow-color),
                       -4px -4px 8px var(--highlight-color);
        }

        .nav-link.active {
            color: var(--color-accent) !important;
            font-weight: 600;
            box-shadow: inset 2px 2px 5px var(--shadow-color),
                       inset -2px -2px 5px var(--highlight-color);
        }

        .navbar-toggler {
            padding: 0.75rem;
            border: none;
            border-radius: var(--border-radius);
            background: var(--bg-darker);
            box-shadow: 2px 2px 5px var(--shadow-color),
                       -2px -2px 5px var(--highlight-color);
            display: none;
        }

        .navbar-toggler:focus {
            box-shadow: inset 2px 2px 5px var(--shadow-color),
                       inset -2px -2px 5px var(--highlight-color);
        }

        /* Form Controls */
        .form-control {
            background: var(--bg-darker);
            border: none;
            color: #ddd;
            padding: 0.75rem 1rem;
            border-radius: var(--border-radius);
            box-shadow: inset 2px 2px 5px var(--shadow-color),
                       inset -2px -2px 5px var(--highlight-color);
        }

        .form-control:focus {
            background: var(--bg-darker);
            color: #fff;
            box-shadow: inset 4px 4px 8px var(--shadow-color),
                       inset -4px -4px 8px var(--highlight-color);
        }

        /* Buttons */
        .btn {
            padding: 0.75rem 1.5rem;
            border: none;
            border-radius: var(--border-radius);
            font-weight: 500;
            transition: all 0.3s ease;
            box-shadow: 2px 2px 5px var(--shadow-color),
                       -2px -2px 5px var(--highlight-color);
        }

        .btn:hover {
            transform: translateY(-1px);
            box-shadow: 4px 4px 8px var(--shadow-color),
                       -4px -4px 8px var(--highlight-color);
        }

        .btn:active {
            transform: translateY(0);
            box-shadow: inset 2px 2px 5px var(--shadow-color),
                       inset -2px -2px 5px var(--highlight-color);
        }

        /* Cards */
        .card {
            background: var(--bg-darker);
            border: none;
            border-radius: var(--border-radius);
            box-shadow: var(--neu-distance) var(--neu-distance) calc(var(--neu-distance) * 2) var(--shadow-color),
                       calc(var(--neu-distance) * -1) calc(var(--neu-distance) * -1) calc(var(--neu-distance) * 2) var(--highlight-color);
            transition: all 0.3s ease;
        }

        .card:hover {
            transform: translateY(-2px);
            box-shadow: calc(var(--neu-distance) * 1.5) calc(var(--neu-distance) * 1.5) calc(var(--neu-distance) * 3) var(--shadow-color),
                       calc(var(--neu-distance) * -1.5) calc(var(--neu-distance) * -1.5) calc(var(--neu-distance) * 3) var(--highlight-color);
        }

        /* Mobile Navigation */
        @@media (max-width: 768px) {
            .navbar-toggler {
                display: block;
            }

            .navbar-nav {
                flex-direction: column;
                gap: 0.75rem;
                width: 100%;
                padding: 1rem 0;
            }

            .navbar-collapse {
                margin-top: 1rem;
                padding: 1rem;
                border-radius: var(--border-radius);
                box-shadow: inset 2px 2px 5px var(--shadow-color),
                           inset -2px -2px 5px var(--highlight-color);
            }

            .nav-link {
                width: 100%;
                justify-content: center;
            }
        }
        /*]]>*/
    </style>
    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-dark">
            <div class="container">
                <a class="navbar-brand" href="/">
                    <i class="fas fa-hat-wizard"></i>
                    Wizard World
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a href="/Home/Houses" class="nav-link @(ViewContext.RouteData.Values["Action"]?.ToString() == "Houses" ? "active" : "")">
                                <i class="fas fa-shield-alt"></i>Houses
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="/Home/Spells" class="nav-link @(ViewContext.RouteData.Values["Action"]?.ToString() == "Spells" ? "active" : "")">
                                <i class="fas fa-wand-sparkles"></i>Spells
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="/Home/Elixirs" class="nav-link @(ViewContext.RouteData.Values["Action"]?.ToString() == "Elixirs" ? "active" : "")">
                                <i class="fas fa-flask"></i>Elixirs
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="/Home/Wizards" class="nav-link @(ViewContext.RouteData.Values["Action"]?.ToString() == "Wizards" ? "active" : "")">
                                <i class="fas fa-user-wizard"></i>Wizards
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <partial name="_Footer" />

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html> 